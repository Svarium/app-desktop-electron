{
  "name": "reporte-automatico-desktop",
  "version": "1.0.12",
  "description": "Reporte Automático Educativo - Desktop App",
  "main": "main.js",
  "author": "MICHICOMPU <admin@michicompu.com>",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "check": "node scripts/check-requirements.js",
    "build:backend": "node scripts/build-backend.js",
    "build:frontend": "node scripts/build-frontend.js",
    "build:all": "npm run build:backend && npm run build:frontend",
    "package": "node scripts/package-win.js",
    "package:win": "node scripts/package-win.js",
    "package:mac": "node scripts/package-mac.js",
    "package:linux": "node scripts/package-linux.js",
    "package:all": "npm run build:all && npm run package:win && npm run package:linux",
    "test:backend": "node scripts/test-backend.js"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.reporteautomatico.app",
    "productName": "Reporte Automático",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "main.js",
      "preload.js",
      "build/"
    ],
    "extraResources": [
      {
        "from": "build/frontend/dist",
        "to": "frontend"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico",
      "sign": null,
      "signingHashAlgorithms": [],
      "verifyUpdateCodeSignature": false,
      "certificateFile": null,
      "certificatePassword": null,
      "publisherName": null,
      "extraResources": [
        {
          "from": "build/backend/backend.exe",
          "to": "backend.exe"
        }
      ]
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "build/icon.icns",
      "category": "public.app-category.education",
      "hardenedRuntime": false,
      "gatekeeperAssess": false,
      "extraResources": [
        {
          "from": "build/backend/backend",
          "to": "backend"
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.png",
      "category": "Education",
      "extraResources": [
        {
          "from": "build/backend/backend",
          "to": "backend"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "dependencies": {
    "axios": "^1.13.4"
  }
}